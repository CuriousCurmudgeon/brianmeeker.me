---
import '../styles/global.css';
import NavLink from "../components/NavLink.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Yet Another Software Engineer's Blog" />
    <title>{title}</title>
  </head>
  <body
    class="min-h-screen w-screen flex flex-col bg-white font-mono text-white overflow-x-hidden"
  >
    <nav class="p-4 sm:py-6 sm:px-12 flex items-center bg-green-900 sm:text-xl">
      <NavLink href="/">brianmeeker.me</NavLink>
      <div class="flex flex-1 gap-2 md:gap-6 justify-end items-center">
        <NavLink href="/speaking">Speaking</NavLink>
        <NavLink href="/contact">Contact</NavLink>
        <NavLink href="/about">About</NavLink>
      </div>
    </nav>

    <main class="flex flex-1 text-black">
      <slot />
    </main>

    <footer class="p-4 sm:py-6 sm:px-12 flex items-center bg-green-900 text-xs">
      <div class="mx-auto">Â© 2022 Copyright: Brian Meeker</div>
    </footer>

    <!-- 100% privacy friendly analytics -->
    <script is:inline async defer src="https://sa.brianmeeker.me/latest.js"></script>
    <noscript
      ><img
        src="https://sa.brianmeeker.me/noscript.gif"
        alt=""
        referrerpolicy="no-referrer-when-downgrade"
      />
    </noscript>
  </body>
</html>
