---
import NavLink from '../components/NavLink.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen w-screen bg-white flex flex-col font-mono overflow-x-hidden">
		<nav class="p-4 sm:py-6 sm:px-12 flex items-center bg-green-900 sm:text-xl text-white">
			<NavLink href="/">
				<img class="mr-2 h-8 w-8 rounded-full grayscale" src="/assets/avatar_64x64.png" height="32" width="32" alt="Leosvel Pérez Espinosa avatar">
				<span>brianmeeker.me</span>
			</NavLink>
			<div class="flex flex-1 gap-6 justify-end items-center">
				<NavLink href="/speaking">Speaking</NavLink>
				<NavLink href="/contact">Contact</NavLink>
				<NavLink href="/about">About</NavLink>
			</div>
		</nav>
		
		<main class="flex flex-1">
			<slot />
		</main>

		<footer class="p-4 sm:py-6 sm:px-12 flex items-center bg-green-900 text-xs text-white">
			<div class="mx-auto">© 2022 Copyright: Brian Meeker</div>
		</footer>
	</body>
</html>
