---
import _ from "lodash";
import PostPreviewList from "../components/PostPreviewList.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const posts = allPosts.map((post) => {
    const year = new Date(post.data.date).getFullYear();
    return {
      ...post,
      data: { ...post.data, year: year },
    };
  });
  const yearGroups = _.groupBy(posts, (post) => post.data.year);

  return _.map(yearGroups, (posts, year) => {
    const sortedPosts = posts.sort(
      (a, b) =>
        new Date(b.data.date).valueOf() -
        new Date(a.data.date).valueOf()
    );
    return {
      params: {
        year: year,
      },
      props: { posts: sortedPosts, year },
    };
  });
}

const { posts, year } = Astro.props;
---
<PostPreviewList label="Year" labelValue={year} {posts} />
