---
import _ from "lodash";
import PostPreviewList from "../../components/PostPreviewList.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const posts = allPosts
    .filter((post) => post.data.tags)
    .flatMap((post) => {
      return post.data.tags!.map((tag) => {
        return {
          ...post,
          data: { ...post.data, currentTag: [tag] },
        };
      });
    });
  const tagGroups = _.groupBy(posts, (post) => post.data.currentTag);

  return _.map(tagGroups, (posts, tag) => {
    const sortedPosts = posts.sort(
      (a, b) =>
        new Date(b.data.date).valueOf() -
        new Date(a.data.date).valueOf()
    );
    return {
      params: {
        tag: tag,
      },
      props: { posts: sortedPosts, tag },
    };
  });
}

const { posts, tag } = Astro.props;
---

<PostPreviewList label="Tag" labelValue={tag} {posts} />
